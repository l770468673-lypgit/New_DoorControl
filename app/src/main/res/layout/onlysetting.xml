<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_activity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="12dp"
            android:src="@mipmap/back_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家庭ID:"/>

            <EditText
                style=""
                android:id="@+id/homeid_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@null"
                android:hint="家庭ID"
                android:textColorHint="#c4c4c4"
                android:textSize="14sp"/>


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家人ID:"/>

            <EditText
                android:textSize="14sp"
                android:textColorHint="#c4c4c4"
                android:id="@+id/houseOwnerOrders_houseOwnerId"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint=" 家人ID"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认优先级:"/>

            <EditText
                android:textSize="14sp"
                android:textColorHint="#c4c4c4"
                android:id="@+id/houseOwnerOrders_seq"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint=" 默认优先级"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家人ID:"/>

            <EditText
                android:textSize="14sp"
                android:textColorHint="#c4c4c4"
                android:id="@+id/houseOwnerOrders_newhouseOwnerId"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint=" 家人ID"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期望优先级:"/>

            <EditText
                android:textSize="14sp"
                android:textColorHint="#c4c4c4"
                android:id="@+id/houseOwnerOrders_newseq"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint=" 期望优先级"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交更改"/>
</LinearLayout>