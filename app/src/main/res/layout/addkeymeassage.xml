<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/key_homeid"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/lly_homeid"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="家庭Id:"
                android:textSize="16sp"/>

            <EditText
                android:textColorHint="#c4c4c4"
                android:id="@+id/key_houseId"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="家庭ID"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/lly_homename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lly_homeid"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="家人姓名:"
                android:textSize="16sp"/>

            <EditText
                android:textColorHint="#c4c4c4"
                android:background="@null"
                android:id="@+id/key_houseOwnerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="家人姓名"
                android:textSize="16sp"/>

        </LinearLayout>


        <LinearLayout

            android:id="@+id/lly_homenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lly_homename"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="家人手机号:"
                android:textSize="16sp"/>

            <EditText
                android:textColorHint="#c4c4c4"
                android:id="@+id/key_phoneNumber"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="家人手机号"
                android:textSize="16sp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lly_homenumber"
        android:orientation="horizontal">

        <Button
            android:layout_margin="4dp"
            android:id="@+id/key_addfamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加家人"/>


    </LinearLayout>
</LinearLayout>